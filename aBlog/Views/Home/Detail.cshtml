@model aBlog.Core.ViewModels.PostCommentViewModel

@{
    ViewBag.Title = Model.Title;
}

<!-- Page Content -->
<div class="container">

    <div class="posts">

        <!-- Blog Post Content Column -->
        <div class="col-lg-8">

            <!-- Blog Post -->
            <!-- Title -->
            <h1>@Model.Title</h1>

            <!-- Author -->
            <p class="lead">
                by <a href="#">@Model.UserName</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p>
                <span class="glyphicon glyphicon-time"></span>
                Posted on @Model.PostedDateTime.ToString("dd MMM yyyy")
                at @Model.PostedDateTime.ToString("HH:mm:ss")
            </p>

            <hr>

            <!-- Preview Image -->
            <img class="img-responsive" src="http://placehold.it/900x300" alt="">

            <hr>

            <!-- Post Content -->
            <p class="lead">
                @Model.Description
                <hr>

                <!-- Blog Comments -->
                @Html.Partial("_CommentsForm")
        </div>

    </div>

</div>
